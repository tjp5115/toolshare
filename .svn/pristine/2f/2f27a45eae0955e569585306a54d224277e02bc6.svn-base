{% extends "base.html" %}
{% block content %}
<div id="cA">
	<div class="Ctopleft"></div>
	<p class="testimonial">
	{%if not isCoordinator %}
	<h2><a class="fancyLoad" href="{% url 'toggleCoordinator' user%}">Become Coordinator</a></h2>
	{%else%}
	<h2><a class="fancyLoad" href="{% url 'toggleCoordinator' user%}">Remove Shed(Change text)</a></h2>
	{%endif%}
	</p>
</div><!-- cA -->
<div id="cB">
	<div class="Ctopright"></div>
	<div id="cB1">
	<h1>Shed Coordinators</h1><br />
		{%if shedCoordinators%}
	    	{% for user in shedCoordinators %}
	    	<h3> <a href="{% url 'homepage_user' user%}">{{user}}'s </a> Shed</h3>
	    	<table id="tableToolList" class="tablesorter {{user}}" summary="Meeting Results">
		    <thead>
		    	<tr>
		            <th scope="col">Owner</th>
		            <th scope="col">Name</th>
		            <th scope="col">Description</th>
		        </tr>
		    </thead>
		    <tbody>
			{% for tool in user.get_profile.getShedTools %}
		    	<tr>
		    	<td class="ownerName" > 
		    		<a href="{% url 'homepage_user' tool.getOwner%}">{{tool.getOwner}}</a>
		    	</td>	
		   	   
		   	    <td class="toolName" >	
					<a 		
							class="displayTool" 
							href="{%url 'displayTool' username=user toolID=tool.id%}" > 
							{{tool.name}}
					</a>
				</td>
				
				<td class="toolDesc">
					{{tool.description}}
				</td>
				
				<td class="toolActionFloat">
					<span class='bold'>
						<a class="borrowTool" href="{%url 'borrowTool' username=user toolID=tool.id%}">Borrow</a>
					</span>
				</td>
		       
		        </tr>

			{% endfor%}
			</tbody>
			</table>
			<h2><a class="fancyFromDiv" href="{%url 'addToolsToShed' username=user coordinator=user%}">Add me to {{user.username}}'s Shed</a>
			<script type='javascript/text'>
				$(".{{user}}").tablesorter();
			</script>
			{% endfor %}
		{%else%}
		<p>&nbsp;</p>
		<p>There are no shed coordinators</p>
		{%endif%}

	</div><!-- cB1 -->
</div><!-- cB -->
<div class="Cpad">
	<br class="clear" /><div class="Cbottomleft"></div><div class="Cbottom"></div><div class="Cbottomright"></div>
</div><!-- Cpad -->
{% endblock %}