{% extends "base.html" %}
{% block content %}

	<div id="toolForm" style="display:none">
		{% include "addTool.html" with form=form user=user%}
	</div>
<div id="cA">
		<div class="Ctopleft"><h3>Tool Options</h3></div>
			<div id="sideMenu">
				<ul>
						<li><a id="addTool" href='#toolForm'>Add Tool</a></li>
						<li><a href=''>Borrowed Tools</a></li>
						<li><a href=''>Tools Owned</a></li>
				</ul>
			
			</div>
		</div><!-- cA -->
		<div id="cB">
			<div class="Ctopright"></div>
			<div id="cB1">
					<h3>All tools ({{numTools}})</h3>
				<div class="news">
					{% include "toolList.html" with toolList=toolList guest=False %}
				</div>
			</div><!-- cB1 -->

			<div id="cB1">
					<h3>Tools you own ({{numToolsOwned}})</h3>
				<div class="news">
					{% include "toolList.html" with toolList=toolListOwned guest=False %}
				</div>
			</div><!-- cB1 -->

			<div id="cB1">
					<h3>Tools you're borrowing ({{numToolsBorrowed}})</h3>
				<div class="news">
					{% include "toolList.html" with toolList=toolListBorrowed guest=False %}
				</div>
			</div><!-- cB1 -->

		</div><!-- cB -->
		<div class="Cpad">
			<br class="clear" /><div class="Cbottomleft"></div><div class="Cbottom"></div><div class="Cbottomright"></div>
		</div><!-- Cpad -->
<script type="text/javascript">
$(document).ready(function() {
	$("a#addTool").fancybox();
});

$("#sendbutton").on("click", function () {
    jQuery(function () {
        var form = jQuery("#RegisterUserForm");
        form.submit(function (e) {
            jQuery("#sendbutton").attr('disabled', true)
            //jQuery("#sendwrapper").prepend('<span>Sending message, please wait... </span>')
            jQuery("#toolForm").load(
                form.prop('action'),
                form.serializeArray(),
                function (responseText, responseStatus) {
                    jQuery("#sendbutton").attr('disabled', false)
                }
            );
            e.preventDefault();
        });
    });
});
</script>
{% endblock %}

